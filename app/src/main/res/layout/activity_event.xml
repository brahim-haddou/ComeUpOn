<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".event.EventActivity"
    app:umanoDragView="@id/drag_view"
    app:umanoScrollableView="@id/event_list_participant"
    android:background="@drawable/drawable_round_background"
    android:gravity="bottom">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/event_map"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="40dp">
            <ImageView
                android:id="@+id/event_image_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/teal_200"
                android:contentDescription="UserImage" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/event_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:text="@string/UserName"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:layout_marginTop="-35dp"
            android:layout_marginStart="110dp"/>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:text="Event Title"
                android:layout_centerVertical="true"
                android:textColor="@color/purple_500"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/event_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:layout_toStartOf="@+id/event_date"
                android:padding="8dp"
                android:text="@string/EventHour"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:background="@drawable/date_shape"
                android:elevation="2dp"
                android:padding="8dp"
                android:shadowColor="@color/purple_200"
                android:text="@string/EventDate"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/amethysta"
                android:padding="8dp"
                android:text="@string/text"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:text="Activities"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_activities">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drag_view"
        android:clickable="true"
        android:focusable="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/todo"
                android:src="@mipmap/logo" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/todo"
                android:src="@mipmap/logo" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/todo"
                android:src="@mipmap/logo" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:text="And 4 others are participating"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/event_list_participant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/event_participant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:background="@drawable/date_shape"
                        android:elevation="2dp"
                        android:padding="8dp"
                        android:layout_margin="10dp"
                        android:shadowColor="@color/purple_200"
                        android:text="participant" />

                    <Button
                        android:id="@+id/event_demands"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:background="@drawable/date_shape"
                        android:elevation="2dp"
                        android:padding="8dp"
                        android:layout_margin="10dp"
                        android:shadowColor="@color/purple_200"
                        android:text="Demands" />

                    <Button
                        android:id="@+id/event_demand_participation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="end"
                        android:background="@drawable/date_shape"
                        android:elevation="2dp"
                        android:padding="8dp"
                        android:layout_margin="10dp"
                        android:shadowColor="@color/purple_200"
                        android:text="Demand Participation" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_participant_recyclerview"/>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>



</com.sothree.slidinguppanel.SlidingUpPanelLayout>