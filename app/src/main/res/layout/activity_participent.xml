<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_participants_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="23dp"
            app:cardCornerRadius="40dp">
            <ImageView
                android:id="@+id/participant_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/teal_200"
                android:scaleType="fitXY"
                android:contentDescription="UserImage" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/participant_username"
            android:layout_width="100dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:text="@string/UserName" />

        <RelativeLayout
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <Button
                android:id="@+id/participant_accept_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:background="@drawable/date_shape"
                android:elevation="2dp"
                android:padding="8dp"
                android:shadowColor="@color/purple_200"
                android:text="Accept" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>